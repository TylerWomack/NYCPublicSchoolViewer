<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/summary_layout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical">
    >

    <TextView
        android:id="@+id/name_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="schoolName"
        android:layout_alignParentTop="true"
        android:textColor="@color/title"
        android:textSize="16dp"
        android:textStyle="bold"
        >
    </TextView>


    <TextView
        android:id="@+id/summary_borough"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name_summary"
        tools:text="Borough" />

    <TextView
        android:id="@+id/summary_population"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/summary_borough"
        android:layout_alignParentLeft="true"
        tools:text="Population: 2000" />

    <TextView
        android:id="@+id/summary_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/summary_population"
        android:layout_alignParentLeft="true"
        tools:text="5 miles" />

    <TextView
        android:id="@+id/safety_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_summary"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:text="47% feel safe" />

    <TextView
        android:id="@+id/graduation_rate_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/safety_summary"
        tools:text="55% graduate" />

    <TextView
        android:id="@+id/SAT_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/graduation_rate_summary"
        tools:text="1200" />

</RelativeLayout>



